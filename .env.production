# UBAS Financial Trust - Production Environment Variables
# Configure these values for your live deployment

# Database Configuration
DB_PASSWORD=UbasFinTrust2024!SecureDB
DATABASE_URL=postgresql://ubas_admin:UbasFinTrust2024!SecureDB@postgres:5432/ubas_financial_trust

# Redis Configuration
REDIS_PASSWORD=UbasRedis2024!Cache
REDIS_URL=redis://:UbasRedis2024!Cache@redis:6379

# Security Keys (Generate new ones for production)
JWT_SECRET=ubas_jwt_secret_key_2024_very_long_and_secure_string_here
ENCRYPTION_KEY=ubas_encryption_key_2024_32_character_string_here
SESSION_SECRET=ubas_session_secret_2024_very_long_and_secure_string

# Admin Credentials
ADMIN_EMAIL=admin@ubasfintrust.com
ADMIN_PASSWORD=UbasAdmin2024!Secure

# Application URLs
FRONTEND_URL=https://demo.ubasfintrust.com
BACKEND_URL=https://api.ubasfintrust.com
CORS_ORIGIN=https://demo.ubasfintrust.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@ubasfintrust.com
SMTP_PASS=your_email_app_password
FROM_EMAIL=noreply@ubasfintrust.com
FROM_NAME=UBAS Financial Trust

# Banking Configuration
BANK_NAME=UBAS Financial Trust
ROUTING_NUMBER=021000021
SWIFT_CODE=UBASFINTRUST
MINIMUM_DEPOSIT=100
MINIMUM_WITHDRAWAL=20
MAXIMUM_DAILY_TRANSFER=50000

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log
AUDIT_LOG_FILE=/app/logs/audit.log

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Demo Mode Configuration
DEMO_MODE=true
DEMO_ACCOUNT_PREFIX=DEMO
AUTO_APPROVE_KYC=true
SIMULATE_EXTERNAL_TRANSFERS=true

# Monitoring and Health Checks
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_MONITORING=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Feature Flags
ENABLE_INVESTMENTS=true
ENABLE_BILL_PAYMENTS=true
ENABLE_INTERNATIONAL_TRANSFERS=true
ENABLE_MOBILE_DEPOSITS=true
ENABLE_WIRE_TRANSFERS=true

# Third-party Integrations (Disabled for demo)
ENABLE_REAL_BANKING_APIS=false
ENABLE_CREDIT_CHECKS=false
ENABLE_IDENTITY_VERIFICATION=false

# Compliance and Reporting
ENABLE_AUDIT_LOGGING=true
ENABLE_TRANSACTION_MONITORING=true
ENABLE_COMPLIANCE_REPORTING=true
SUSPICIOUS_ACTIVITY_THRESHOLD=10000

# Performance Configuration
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10
API_TIMEOUT=30000
DATABASE_TIMEOUT=10000
