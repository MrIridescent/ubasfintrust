# Production Environment Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database (override via DATABASE_URL if using managed Postgres)
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=
DATABASE_URL=

# Redis
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Admin Seed User
ADMIN_EMAIL=admin@ubasfintrust.com
ADMIN_PASSWORD=ChangeMe#12345
ADMIN_PHONE=+10000000000

# JWT
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security / Hashing
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=
SESSION_SECRET=

# Email / Notifications (primary)
FROM_EMAIL=noreply@ubasfintrust.com
FROM_NAME=UBAS Financial Trust

# Resend
RESEND_API_KEY=

# SendGrid (fallback)
SENDGRID_API_KEY=

# Mailgun (fallback)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS SES (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# SMS Providers (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_FROM_NUMBER=
TEXTBELT_API_KEY=
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SENDER_ID=UBAS Bank
TERMII_API_KEY=
TERMII_SENDER_ID=UBAS Bank

# Feature Flags
BANK_SIMULATION_MODE=false
ENABLE_REALISTIC_DELAYS=false
ENABLE_INTER_BANK_TRANSFERS=true
ENABLE_INTERNATIONAL_TRANSFERS=true
ENABLE_TRANSFER_FEES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging/Monitoring
LOG_LEVEL=info
SENTRY_DSN=

# WebSocket
SOCKET_IO_CORS_ORIGIN=
