# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=provi_banking
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/provi_banking

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@ubasfintrust.com
FROM_NAME=UBAS Financial Trust

# Email Service Providers (Resend etc.)
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

DIAGNOSTICS_TOKEN=protect_diagnostics

# SMS Service Providers (Multiple for fallback - configure at least one)
# Twilio (Recommended - $15 trial credit)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Vonage (Alternative - â‚¬2 trial credit)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=your_vonage_from_number

# SMS Provider (Default): TextBelt (free test key 'textbelt' or your paid key)
TEXTBELT_API_KEY=textbelt

# AfricasTalking (Optional)
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SENDER_ID=UBAS Financial Trust

# Termii (Optional)
TERMII_API_KEY=
TERMII_SENDER_ID=UBAS Financial Trust

# Banking Configuration
PROCESSING_DELAY_MS=2000

# File Upload / Storage (R2/Spaces via S3 API)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Optional S3 endpoint for Cloudflare R2 / DO Spaces
S3_ENDPOINT=

# Rate Limiting (window ms / max requests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Banking Simulation Settings (optional)
BANK_SIMULATION_MODE=true
ENABLE_REALISTIC_DELAYS=true
TRANSFER_SUCCESS_RATE=95

# External APIs
CREDIT_BUREAU_API_KEY=your_credit_bureau_api_key
FRAUD_DETECTION_API_KEY=your_fraud_detection_api_key

# Compliance (placeholders)
KYC_PROVIDER_API_KEY=your_kyc_provider_api_key
AML_PROVIDER_API_KEY=your_aml_provider_api_key

# Banking Features (feature flags)
ENABLE_INTER_BANK_TRANSFERS=true
ENABLE_INTERNATIONAL_TRANSFERS=true
ENABLE_TRANSFER_FEES=true

# Admin Seed (ensure corporate admin created on first boot)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass#123
ADMIN_FIRST_NAME=Platform
ADMIN_LAST_NAME=Administrator
ADMIN_PHONE=+10000000000

# WebSocket
SOCKET_IO_CORS_ORIGIN=http://localhost:8080
