## Backend Environment Variables Example (cleaned and aligned with code)

# Environment
NODE_ENV=development
API_VERSION=v1
PORT=5000

# Database (choose one)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/provi_banking
DB_HOST=localhost
DB_PORT=5432
DB_NAME=provi_banking
DB_USER=postgres
DB_PASSWORD=postgres

# Secrets
JWT_SECRET=your_long_random_jwt_secret
JWT_REFRESH_SECRET=your_long_random_refresh_secret
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=32_characters_minimum_key_here

# CORS / WebSockets
ALLOWED_ORIGINS=http://localhost:8080
SOCKET_IO_CORS_ORIGIN=http://localhost:8080

# Admin bootstrap (runs only if both email and password are set)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass#123
# Optional
ADMIN_FIRST_NAME=Platform
ADMIN_LAST_NAME=Administrator
ADMIN_PHONE=+10000000000

# Email / Notifications (optional)
RESEND_API_KEY=
SMTP_HOST=smtp.zohopro.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@ubasfintrust.com
FROM_NAME=UBAS Financial Trust

# SMS/Voice providers (optional)
TEXTBELT_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
VONAGE_API_KEY=
VONAGE_API_SECRET=
MESSAGEBIRD_API_KEY=
PLIVO_AUTH_ID=
PLIVO_AUTH_TOKEN=

# S3-compatible storage for KYC docs (optional)
S3_BUCKET=
S3_REGION=auto
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# S3_ENDPOINT=

# Diagnostics (optional token to guard /_diagnostics)
DIAGNOSTICS_TOKEN=dev_diagnostics_token
